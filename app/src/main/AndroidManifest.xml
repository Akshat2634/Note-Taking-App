<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.architectureexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_note"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_note_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddEditNoteActivity"
            android:parentActivityName=".MainActivity" /> //RESPONSIBLE FOR GETTING BACK BUTTON IN TOP LEFT CORNER OF ITS NOTE ACTIVITY WHICH WILL BE LATER REPLACED BY X ICON
    </application>

</manifest>